<% const page = 'contact'; const pageTitle = 'Contact'; %>
<%- include('header') %>

<style>
/* Ensure form inputs are clickable and editable */
#contactForm input,
#contactForm textarea {
  pointer-events: auto !important;
  user-select: text !important;
  -webkit-user-select: text !important;
  -moz-user-select: text !important;
  -ms-user-select: text !important;
  cursor: text !important;
  position: relative;
  z-index: 10;
}

#contactForm input:focus,
#contactForm textarea:focus {
  outline: none;
  border-color: var(--maroon-light, #c77dff);
}

/* Ensure the card doesn't block interactions */
#contactForm .card,
#contactForm {
  pointer-events: auto !important;
}
</style>

<!-- Contact Section -->
<section class="section pt-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="section-title inline-block">Get In <span class="gradient-text">Touch</span></h1>
      <p class="text-gray-light mt-4 text-lg max-w-2xl mx-auto">
        I'm currently open to new opportunities and collaborations. Feel free to reach out!
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Contact Information -->
      <div>
        <h2 class="text-3xl font-bold mb-8">Contact Information</h2>
        
        <!-- Email -->
        <div class="card mb-6">
          <div class="flex items-start">
            <div class="w-14 h-14 rounded-lg bg-maroon-dark flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-envelope text-2xl text-maroon-light"></i>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg mb-1">Email</h3>
              <a href="mailto:<%= data.contact.email %>" class="text-gray-light hover:text-maroon-light transition copy-email">
                <%= data.contact.email %>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Phone -->
        <div class="card mb-6">
          <div class="flex items-start">
            <div class="w-14 h-14 rounded-lg bg-maroon-dark flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-phone text-2xl text-maroon-light"></i>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg mb-1">Phone</h3>
              <a href="tel:<%= data.contact.phone %>" class="text-gray-light hover:text-maroon-light transition">
                <%= data.contact.phone %>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Location -->
        <div class="card mb-6">
          <div class="flex items-start">
            <div class="w-14 h-14 rounded-lg bg-maroon-dark flex items-center justify-center mr-4 flex-shrink-0">
              <i class="fas fa-map-marker-alt text-2xl text-maroon-light"></i>
            </div>
            <div class="flex-1">
              <h3 class="font-semibold text-lg mb-1">Location</h3>
              <p class="text-gray-light"><%= data.contact.address %></p>
            </div>
          </div>
        </div>
        
        <!-- Social Media -->
        <div class="card">
          <h3 class="font-semibold text-lg mb-4">Connect on Social Media</h3>
          <div class="grid grid-cols-3 gap-4">
            <a href="https://linkedin.com/in/<%= data.contact.linkedin %>" target="_blank" 
               class="flex flex-col items-center p-4 bg-gray-dark rounded-lg hover:bg-maroon-dark transition">
              <i class="fab fa-linkedin text-3xl text-maroon-light mb-2"></i>
              <span class="text-sm text-gray-light">LinkedIn</span>
            </a>
            <a href="https://github.com/<%= data.contact.github %>" target="_blank" 
               class="flex flex-col items-center p-4 bg-gray-dark rounded-lg hover:bg-maroon-dark transition">
              <i class="fab fa-github text-3xl text-maroon-light mb-2"></i>
              <span class="text-sm text-gray-light">GitHub</span>
            </a>
            <a href="https://instagram.com/<%= data.contact.instagram %>" target="_blank" 
               class="flex flex-col items-center p-4 bg-gray-dark rounded-lg hover:bg-maroon-dark transition">
              <i class="fab fa-instagram text-3xl text-maroon-light mb-2"></i>
              <span class="text-sm text-gray-light">Instagram</span>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div>
        <div class="card">
          <h2 class="text-3xl font-bold mb-6">Send a Message</h2>
          <form id="contactForm" class="space-y-6">
            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-semibold mb-2">
                Your Name <span class="text-maroon-light">*</span>
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                style="pointer-events: auto; user-select: text; -webkit-user-select: text;"
                class="w-full px-4 py-3 bg-gray-dark border border-gray-medium rounded-lg focus:border-maroon-light focus:outline-none transition text-black"
                placeholder="Please enter your name here"
              >
            </div>
            
            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-semibold mb-2">
                Your Email <span class="text-maroon-light">*</span>
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                style="pointer-events: auto; user-select: text; -webkit-user-select: text;"
                class="w-full px-4 py-3 bg-gray-dark border border-gray-medium rounded-lg focus:border-maroon-light focus:outline-none text-black transition"
                placeholder="yourmail@example.com"
              >
            </div>
            
            <!-- Subject -->
            <div>
              <label for="subject" class="block text-sm font-semibold mb-2">
                Subject <span class="text-maroon-light">*</span>
              </label>
              <input 
                type="text" 
                id="subject" 
                name="subject" 
                required
                style="pointer-events: auto; user-select: text; -webkit-user-select: text;"
                class="w-full px-4 py-3 bg-gray-dark border border-gray-medium rounded-lg focus:border-maroon-light focus:outline-none text-black transition"
                placeholder="Project Inquiry"
              >
            </div>
            
            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold mb-2">
                Message <span class="text-maroon-light">*</span>
              </label>
              <textarea 
                id="message" 
                name="message" 
                rows="6" 
                required
                style="pointer-events: auto; user-select: text; -webkit-user-select: text;"
                class="w-full px-4 py-3 bg-gray-dark border border-gray-medium rounded-lg focus:border-maroon-light focus:outline-none text-black transition resize-none"
                placeholder="Tell me about your project or inquiry..."
              ></textarea>
            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn-primary w-full">
              <i class="fas fa-paper-plane mr-2"></i> Send Message
            </button>
          </form>
          
          <div id="formMessage" class="mt-4 hidden p-4 rounded-lg"></div>
        </div>
      </div>
    </div>
    
    <!-- Quick Contact Cards -->
    <div class="mt-16">
      <h2 class="text-3xl font-bold text-center mb-8">Quick <span class="gradient-text">Actions</span></h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="mailto:<%= data.contact.email %>" class="card text-center hover:scale-105 transition-transform">
          <i class="fas fa-envelope text-4xl text-maroon-light mb-4"></i>
          <h3 class="font-semibold text-lg mb-2">Email Me</h3>
          <p class="text-gray-light text-sm">Send me an email directly</p>
        </a>
        
        <a href="https://linkedin.com/in/<%= data.contact.linkedin %>" target="_blank" 
           class="card text-center hover:scale-105 transition-transform">
          <i class="fab fa-linkedin text-4xl text-maroon-light mb-4"></i>
          <h3 class="font-semibold text-lg mb-2">Connect on LinkedIn</h3>
          <p class="text-gray-light text-sm">Let's connect professionally</p>
        </a>
        
        <a href="/projects" class="card text-center hover:scale-105 transition-transform">
          <i class="fas fa-folder-open text-4xl text-maroon-light mb-4"></i>
          <h3 class="font-semibold text-lg mb-2">View My Work</h3>
          <p class="text-gray-light text-sm">Check out my projects</p>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
// Contact Form Handler - Backend submission
document.getElementById('contactForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  
  const formMessage = document.getElementById('formMessage');
  const submitBtn = this.querySelector('button[type="submit"]');
  const originalBtnText = submitBtn.innerHTML;
  
  // Disable submit button
  submitBtn.disabled = true;
  submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Sending...';
  
  // Get form data
  const formData = {
    name: document.getElementById('name').value,
    email: document.getElementById('email').value,
    subject: document.getElementById('subject').value,
    message: document.getElementById('message').value
  };
  
  try {
    // Send request to backend
    const response = await fetch('/contact', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify(formData)
    });
    
    const result = await response.json();
    
    // Show message
    formMessage.classList.remove('hidden', 'bg-red-500', 'bg-green-500');
    
    if (result.success) {
      formMessage.classList.add('bg-green-500');
      formMessage.innerHTML = `
        <i class="fas fa-check-circle mr-2"></i>
        ${result.message}
      `;
      // Reset form
      this.reset();
    } else {
      formMessage.classList.add('bg-red-500');
      formMessage.innerHTML = `
        <i class="fas fa-exclamation-circle mr-2"></i>
        ${result.message}
      `;
    }
    
  } catch (error) {
    console.error('Contact form error:', error);
    formMessage.classList.remove('hidden');
    formMessage.classList.add('bg-red-500');
    formMessage.innerHTML = `
      <i class="fas fa-exclamation-circle mr-2"></i>
      Network error. Please check your connection and try again.
    `;
  } finally {
    // Re-enable submit button
    submitBtn.disabled = false;
    submitBtn.innerHTML = originalBtnText;
    
    // Hide message after 5 seconds
    setTimeout(() => {
      formMessage.classList.add('hidden');
    }, 5000);
  }
});

// Copy email to clipboard functionality
document.querySelectorAll('.copy-email').forEach(element => {
  element.addEventListener('click', function(e) {
    e.preventDefault();
    const email = this.textContent.trim();
    navigator.clipboard.writeText(email).then(() => {
      // Show copied notification
      const originalText = this.textContent;
      this.textContent = 'Copied!';
      setTimeout(() => {
        this.textContent = originalText;
      }, 2000);
    });
  });
});
</script>

<%- include('footer') %>
