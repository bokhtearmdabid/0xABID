<% const page = 'home'; const pageTitle = 'Home'; %>
<%- include('header') %>

<!-- Hero Section -->
<section class="hero">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="fade-in-up">
        <p class="text-maroon-light text-lg mb-2 mt-4 font-semibold">Welcome to my portfolio</p>
        <h1 class="text-5xl md:text-7xl font-bold mb-4" style="font-family: 'Playfair Display', serif;">
          <span class="gradient-text">Bokhtear</span><br>
          <span class="text-white">Md Abid</span>
        </h1>
        <h2 id="typingText" class="text-2xl md:text-3xl text-gray-light mb-6">
          <%= data.title %>
        </h2>
        <p class="text-gray-light mb-8 leading-relaxed max-w-xl">
          <%= data.profile.substring(0, 200) %>...
        </p>
        
        <div class="flex flex-wrap gap-4">
          <a href="/projects" class="btn-primary">
            View Projects
          </a>
          <a href="/contact" class="btn-primary" style="background: transparent; border: 2px solid var(--maroon);">
            Get In Touch
          </a>
        </div>
        
        <!-- Social Links -->
        <div class="flex space-x-6 mt-8">
          <a href="https://linkedin.com/in/<%= data.contact.linkedin %>" target="_blank" 
             class="text-gray-light hover:text-maroon-light transition text-2xl">
            <i class="fab fa-linkedin"></i>
          </a>
          <a href="https://github.com/<%= data.contact.github %>" target="_blank" 
             class="text-gray-light hover:text-maroon-light transition text-2xl">
            <i class="fab fa-github"></i>
          </a>
          <a href="https://instagram.com/<%= data.contact.instagram %>" target="_blank" 
             class="text-gray-light hover:text-maroon-light transition text-2xl">
            <i class="fab fa-instagram"></i>
          </a>
        </div>
      </div>
      
      <!-- Profile Image / Visual -->
      <div class="float">
        <div class="relative">
          <!-- Soft radial glow emanating from image -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-80 h-80 rounded-full bg-maroon/30 blur-[100px]"></div>
          </div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-64 h-64 rounded-full bg-maroon-light/40 blur-[80px]"></div>
          </div>
          
          <!-- Main profile card -->
          <div class="text-center relative z-10">
            <!-- Profile Image Container - Clean, borderless design -->
            <div class="relative w-64 h-64 mx-auto mb-8">
              <!-- Subtle outer glow -->
              <div class="absolute -inset-4 bg-gradient-to-br from-maroon/20 via-maroon-light/10 to-transparent rounded-full blur-2xl"></div>
              
              <!-- Image with soft shadow -->
              <div class="relative w-full h-full rounded-full overflow-hidden shadow-2xl shadow-maroon/20">
                <img src="/images/profile.jpg" alt="Bokhtear Md Abid" class="w-full h-full object-cover">
                
                <!-- Subtle overlay gradient for depth -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/10 via-transparent to-transparent"></div>
              </div>
              
              <!-- Ambient light spots around image -->
              <div class="absolute -top-8 -right-8 w-24 h-24 bg-maroon-light/30 rounded-full blur-3xl"></div>
              <div class="absolute -bottom-8 -left-8 w-24 h-24 bg-maroon/30 rounded-full blur-3xl"></div>
            </div>
            
            <!-- Stats Grid -->
            <div class="grid grid-cols-2 gap-4 mt-8 px-4">
              <div class="p-6 bg-gray-dark/50 backdrop-blur-sm rounded-2xl border border-maroon/10 hover:border-maroon/30 hover:bg-gray-dark/70 transition-all duration-300">
                <h3 class="text-3xl font-bold gradient-text"><%= data.projects.length %>+</h3>
                <p class="text-gray-light text-sm mt-2">Projects</p>
              </div>
              <div class="p-6 bg-gray-dark/50 backdrop-blur-sm rounded-2xl border border-maroon/10 hover:border-maroon/30 hover:bg-gray-dark/70 transition-all duration-300">
                <h3 class="text-3xl font-bold gradient-text"><%= Object.keys(data.skills).length %>+</h3>
                <p class="text-gray-light text-sm mt-2">Tech Skills</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Featured Projects Section -->
<section class="section bg-gray-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="section-title">Featured <span class="gradient-text">Projects</span></h2>
    <p class="text-gray-light mt-4 mb-12 max-w-2xl">
      Explore my recent work showcasing full-stack development, machine learning, and system design.
    </p>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      <% data.projects.slice(0, 2).forEach((project, index) => { %>
        <div class="card fade-in-up" style="animation-delay: <%= index * 0.1 %>s;">
          <div class="mb-4">
            <h3 class="text-2xl font-bold mb-2"><%= project.name %></h3>
            <p class="text-maroon-light text-sm font-semibold"><%= project.subtitle %></p>
          </div>
          
          <p class="text-gray-light mb-4 leading-relaxed">
            <%= project.description %>
          </p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            <% project.tech.forEach(tech => { %>
              <span class="px-3 py-1 bg-maroon-dark text-sm rounded-full">
                <%= tech %>
              </span>
            <% }); %>
          </div>
          
          <% if (project.url) { %>
            <a href="<%= project.url %>" target="_blank" 
               class="text-maroon-light hover:text-white transition inline-flex items-center">
              View Live <i class="fas fa-external-link-alt ml-2"></i>
            </a>
          <% } %>
        </div>
      <% }); %>
    </div>
    
    <div class="text-center mt-12">
      <a href="/projects" class="btn-primary">
        View All <%= data.projects.length %> Projects
      </a>
    </div>
  </div>
</section>

<!-- Skills Preview Section -->
<section class="section">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="section-title">Technical <span class="gradient-text">Skills</span></h2>
    <p class="text-gray-light mt-4 mb-12 max-w-2xl">
      Proficient in modern web technologies and frameworks
    </p>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <% data.skills.languages.forEach((skill, index) => { %>
        <div class="skill-item" style="animation-delay: <%= index * 0.05 %>s;">
          <p class="font-semibold"><%= skill %></p>
        </div>
      <% }); %>
      <% data.skills.frameworks.forEach((skill, index) => { %>
        <div class="skill-item" style="animation-delay: <%= (data.skills.languages.length + index) * 0.05 %>s;">
          <p class="font-semibold"><%= skill %></p>
        </div>
      <% }); %>
    </div>
    
    <div class="text-center mt-12">
      <a href="/skills" class="btn-primary">
        View All Skills
      </a>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="section bg-gradient-to-br from-maroon-dark to-black">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: 'Playfair Display', serif;">
      Let's Build Something <span class="gradient-text">Amazing</span>
    </h2>
    <p class="text-gray-light text-lg mb-8 max-w-2xl mx-auto">
      I'm currently open to opportunities and collaborations. Feel free to reach out!
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a href="/contact" class="btn-primary">
        Contact Me
      </a>
      <a href="mailto:<%= data.contact.email %>" class="btn-primary" style="background: transparent; border: 2px solid var(--maroon);">
        <i class="fas fa-envelope mr-2"></i> Email Me
      </a>
    </div>
  </div>
</section>

<%- include('footer') %>