<% const page = '404'; const pageTitle = '404 - Page Not Found'; %>
<%- include('header') %>

<!-- 404 Section -->
<section class="section pt-24 min-h-screen flex items-center justify-center">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="float">
      <!-- 404 Icon -->
      <div class="mb-8">
        <div class="inline-block w-48 h-48 rounded-full bg-gradient-to-br from-maroon-dark to-maroon flex items-center justify-center">
          <span class="text-8xl font-bold">404</span>
        </div>
      </div>
      
      <!-- Title -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6" style="font-family: 'Playfair Display', serif;">
        Page <span class="gradient-text">Not Found</span>
      </h1>
      
      <!-- Description -->
      <p class="text-gray-light text-xl mb-8 max-w-2xl mx-auto">
        Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
      </p>
      
      <!-- Action Buttons -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <a href="/" class="btn-primary">
          <i class="fas fa-home mr-2"></i> Go Home
        </a>
        <a href="/projects" class="btn-primary" style="background: transparent; border: 2px solid var(--maroon);">
          <i class="fas fa-folder-open mr-2"></i> View Projects
        </a>
      </div>
      
      <!-- Suggestions -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
        <a href="/about" class="card hover:scale-105 transition-transform">
          <i class="fas fa-user text-3xl text-maroon-light mb-3"></i>
          <h3 class="font-semibold mb-2">About Me</h3>
          <p class="text-gray-light text-sm">Learn more about my background</p>
        </a>
        
        <a href="/skills" class="card hover:scale-105 transition-transform">
          <i class="fas fa-code text-3xl text-maroon-light mb-3"></i>
          <h3 class="font-semibold mb-2">My Skills</h3>
          <p class="text-gray-light text-sm">Check out my technical expertise</p>
        </a>
        
        <a href="/contact" class="card hover:scale-105 transition-transform">
          <i class="fas fa-envelope text-3xl text-maroon-light mb-3"></i>
          <h3 class="font-semibold mb-2">Contact</h3>
          <p class="text-gray-light text-sm">Get in touch with me</p>
        </a>
      </div>
    </div>
  </div>
</section>

<%- include('footer') %>
